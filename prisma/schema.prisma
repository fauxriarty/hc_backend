datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  phoneNumber String   @unique
  isWhatsApp  Boolean
  newsletter  Boolean
  occupation  String
  address     String
  dateOfBirth String   // Change to String
  haves       Have[]
  wishes      Wish[]
}

model Have {
  id          Int    @id @default(autoincrement())
  category    String
  description String
  userId      Int
  user        User   @relation(fields: [userId], references: [id])
}

model Wish {
  id          Int    @id @default(autoincrement())
  category    String
  description String
  userId      Int
  user        User   @relation(fields: [userId], references: [id])
}
