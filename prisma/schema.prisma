datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int       @id @default(autoincrement())
  name        String
  email       String?
  phoneNumber String    @unique
  isWhatsApp  Boolean   @default(false)
  newsletter  Boolean   @default(false)
  occupation  String?
  dateOfBirth DateTime
  pincode     String
  state       String
  city        String
  haves       Have[]
  wishes      Wish[]
}

model Have {
  id          Int       @id @default(autoincrement())
  category    String
  description String
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}

model Wish {
  id          Int       @id @default(autoincrement())
  category    String
  description String
  skills      String[]
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}
