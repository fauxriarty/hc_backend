datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  address     String
  phoneNumber String
  dateOfBirth String
  tasks       Task[]
}

model Task {
  id          Int      @id @default(autoincrement())
  description String
  completed   Boolean
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
